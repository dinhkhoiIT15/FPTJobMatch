@model IEnumerable<FPTJobMatch.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List all jobs</h1>
<table class="table">
    <thead class="table-dark">
        <tr class="text-lg-left">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                Category
            </th>
            <th class="text-lg-center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-lg-left">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-lg-center">
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td class="text-lg-center">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Industry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjCategory.Name)
                </td>
                <td class="text-center">
                    <a class="btn btn-success w-auto rounded-pill" asp-action="Index" asp-controller="ProJobs" asp-route-id="@item.Id">Applied</a>
                    <a class="btn btn-warning w-auto rounded-pill" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary w-auto rounded-pill" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger w-auto rounded-pill" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
