@model IEnumerable<FPTJobMatch.Models.ProJob>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List applied person</h1>

<table class="table">
    <thead class="table-dark">
        <tr class="text-lg-center">
            <th>
                @Html.DisplayNameFor(model => model.ObjProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjJob)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-lg-center">
                <td>
                    @Html.DisplayFor(modelItem => item.ObjProfile.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjJob.Title)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-danger" href="https://localhost:7223/Jobs">Back to list</a>
</div>
